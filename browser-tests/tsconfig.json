{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "build",
    "inlineSourceMap": true,
    "types": ["node"]
  },
  "include": ["./**/*.ts"]
}
