{
  "name": "di-ipv-core-front",
  "version": "0.0.1",
  "description": "User interface for the Identity Proofing and Verification (IPV) system within the GDS digital identity platform, GOV.UK Sign In.",
  "main": "src/server.js",
  "engines": {
    "node": "16.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --inspect=0.0.0.0:9228 src/app.js",
    "build": "yarn minfiy-build-front-end-gov-js && yarn build-sass && yarn copy-locales",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "copy-locales": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ ",
    "minfiy-build-front-end-gov-js": "mkdir -p dist/public/javascripts; uglifyjs node_modules/govuk-frontend/govuk/all.js node_modules/hmpo-components/all.js src/assets/javascript/application.js -o dist/public/javascripts/application.js -c -m ",
    "lint": "prettier --check src test && eslint .",
    "test": "mocha",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary yarn test",
    "test:watch": "mocha --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/di-ipv-core-front.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alphagov/di-ipv-core-front/issues"
  },
  "homepage": "https://github.com/alphagov/di-ipv-core-front#readme",
  "packageManager": "yarn@2.4.3",
  "devDependencies": {
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.2",
    "mocha": "10.0.0",
    "nodemon": "2.0.16",
    "prettier": "2.7.1",
    "proxyquire": "2.1.3",
    "sass": "1.52.3",
    "sinon": "14.0.0",
    "sinon-chai": "3.7.0",
    "uglify-js": "latest"
  },
  "dependencies": {
    "aws-sdk": "^2.1160.0",
    "axios": "0.27.2",
    "body-parser": "^1.20.0",
    "cfenv": "1.2.4",
    "connect-dynamodb": "^2.0.4",
    "copyfiles": "2.4.1",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.1",
    "express": "4.18.1",
    "express-async-errors": "3.1.1",
    "express-session": "^1.17.3",
    "govuk-frontend": "4.0.1",
    "hmpo-app": "2.3.0",
    "hmpo-components": "5.3.0",
    "hmpo-config": "2.2.0",
    "hmpo-form-wizard": "12.0.3",
    "hmpo-i18n": "5.0.2",
    "hmpo-logger": "6.1.0",
    "jsonwebtoken": "8.5.1",
    "nunjucks": "3.2.3",
    "nyc": "15.1.0"
  }
}
