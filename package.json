{
  "name": "di-ipv-core-front",
  "version": "0.0.1",
  "description": "User interface for the Identity Proofing and Verification (IPV) system within the GDS digital identity platform, GOV.UK Sign In.",
  "main": "src/server.js",
  "engines": {
    "node": "16.13.1",
    "yarn": "1.22.17"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --inspect=0.0.0.0:9228 src/app.js",
    "build": "yarn build-sass && yarn copy-assets",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "copy-assets": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ && copyfiles -u 3 src/assets/javascript/*.js dist/public/scripts",
    "minfiy-build-js": "uglifyjs src/assets/javascript/application.js -o src/assets/javascript/application.js -c -m && uglifyjs src/assets/javascript/cookies.js -o src/assets/javascript/cookies.js -c -m",
    "lint": "eslint .",
    "test": "mocha",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary yarn test",
    "test:watch": "mocha --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/di-ipv-core-front.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alphagov/di-ipv-core-front/issues"
  },
  "homepage": "https://github.com/alphagov/di-ipv-core-front#readme",
  "packageManager": "yarn@2.4.3",
  "devDependencies": {
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.8",
    "mocha": "9.1.3",
    "nodemon": "2.0.13",
    "prettier": "2.6.2",
    "proxyquire": "2.1.3",
    "sass": "1.50.1",
    "sinon": "13.0.2",
    "sinon-chai": "3.7.0"
  },
  "dependencies": {
    "axios": "0.26.1",
    "cfenv": "1.2.4",
    "copyfiles": "2.4.1",
    "dotenv": "^10.0.0",
    "express": "4.17.3",
    "express-async-errors": "3.1.1",
    "govuk-frontend": "4.0.1",
    "hmpo-app": "2.0.0",
    "hmpo-components": "5.3.0",
    "hmpo-config": "2.2.0",
    "hmpo-form-wizard": "11.11.0",
    "hmpo-i18n": "5.0.1",
    "hmpo-logger": "6.0.0",
    "jsonwebtoken": "8.5.1",
    "nunjucks": "3.2.3",
    "nyc": "15.1.0"
  }
}
