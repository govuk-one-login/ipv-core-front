{
  "name": "di-ipv-core-front",
  "version": "0.0.1",
  "description": "User interface for the Identity Proofing and Verification (IPV) system within the GDS digital identity platform, GOV.UK Sign In.",
  "main": "src/server.js",
  "engines": {
    "node": "18.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "start": "node src/app.js",
    "start-dev": "node src/app.js | pino-pretty",
    "dev": "nodemon --inspect=0.0.0.0:9228 src/app.js",
    "build": "yarn build-js && yarn build-sass && yarn copy-locales && yarn copy-images",
    "build-js": "mkdir -p dist/public/javascripts; uglifyjs node_modules/govuk-frontend/govuk/all.js src/assets/javascript/**/**/*.js src/assets/javascript/**/*.js -o dist/public/javascripts/application.js -c -m ",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "copy-locales": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ ",
    "copy-images": "copyfiles -u 3 src/assets/images/** dist/public/images",
    "lint": "prettier --check src test && eslint .",
    "test": "mocha",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary yarn test",
    "test:watch": "mocha --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/di-ipv-core-front.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alphagov/di-ipv-core-front/issues"
  },
  "homepage": "https://github.com/alphagov/di-ipv-core-front#readme",
  "packageManager": "yarn@2.4.3",
  "devDependencies": {
    "chai": "4.3.7",
    "chai-as-promised": "7.1.1",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "mocha": "10.2.0",
    "nodemon": "2.0.22",
    "pino-pretty": "10.0.0",
    "prettier": "2.8.8",
    "proxyquire": "2.1.3",
    "sass": "1.64.2",
    "sinon": "15.2.0",
    "sinon-chai": "3.7.0",
    "uglify-js": "latest"
  },
  "dependencies": {
    "aws-sdk": "^2.1468.0",
    "axios": "1.4.0",
    "body-parser": "^1.20.2",
    "cfenv": "1.2.4",
    "connect-dynamodb": "^2.0.6",
    "cookie-parser": "1.4.6",
    "copyfiles": "2.4.1",
    "csurf": "1.11.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-session": "1.17.3",
    "govuk-frontend": "4.7.0",
    "i18next": "23.2.7",
    "i18next-fs-backend": "^2.1.2",
    "i18next-http-middleware": "^3.3.1",
    "jsonwebtoken": "9.0.0",
    "nunjucks": "3.2.4",
    "nyc": "15.1.0",
    "pino": "8.14.1",
    "pino-http": "8.3.3",
    "sanitize-filename": "^1.6.3"
  }
}
