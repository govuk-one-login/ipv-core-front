{% extends "shared/base.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set pageTitleName = 'error.pageNotFound.title' | translate %}
{% set googleTagManagerPageId = "errors.pageNotFound" %}

{% block content %}
  <h1 class="govuk-heading-l">{{'error.pageNotFound.header' | translate }}</h1>
  <p class="govuk-body">{{'error.pageNotFound.content.paragraph1' | translate }}</p>
  <p class="govuk-body">{{'error.pageNotFound.content.paragraph2' | translate }}</p>
  <p class="govuk-body">{{'error.pageNotFound.content.paragraph3' | translate }}</p>

  {{ govukButton({
    "text": button_text|default('error.pageNotFound.content.govUKHomepageButtonText' | translate, true),
    "type": "Submit",
    "href": 'error.pageNotFound.content.govUKHomepageButtonHref' | translate
  }) }}

  <p class="govuk-body"><a target="_blank" rel="noopener noreferrer" href="{{'error.pageNotFound.content.contactLinkHref' | translate }}" class="govuk-link">{{'error.pageNotFound.content.contactLinkText' | translate }}</a></p>
{% endblock %}
