  <p class="govuk-body">{{'pages.pyiTechnicalUnrecoverable.content.paragraph1' | translate }}</p>
  <h2 class="govuk-heading-m">{{'pages.pyiTechnicalUnrecoverable.content.subHeading' | translate }}</h2>
  <p class="govuk-body">{{'pages.pyiTechnicalUnrecoverable.content.paragraph2' | translate }}</p>

  {{ govukButton({
