{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2022",
    // For now we specifically compile to commonJS for interop with existing libraries
    // Once fully transitioned to TS, we can switch to nodenext and output ES modules
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "build",
    "sourceMap": true,
    "types": ["node", "mocha"]
  },
  "include": ["src"],
  "exclude": ["**/*.test.js"]
}
