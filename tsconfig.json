{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "build",
    "types": ["node", "mocha"]
  },
  "include": ["src"],
  "exclude": ["**/*.test.js"]
}
