  <p class="govuk-body">{{'pages.pagePreExperianKbvTransition.content.paragraph1' | translate }}</p>
  <p class="govuk-body">{{'pages.pagePreExperianKbvTransition.content.paragraph2' | translate }}</p>
  <h2 class="govuk-heading-m">{{ 'pages.pagePreExperianKbvTransition.content.subHeading1' | translate }}</h2>
  <p class="govuk-body">{{'pages.pagePreExperianKbvTransition.content.paragraph3' | translate }}</p>

  {{ govukDetails({
    summaryText: 'pages.pagePreExperianKbvTransition.summaryText' | translate,
    text: 'pages.pagePreExperianKbvTransition.summaryHtml' | translate | safe
  }) }}

  <p class="govuk-body">{{'pages.pagePreExperianKbvTransition.content.paragraph4' | translate }}</p>
  <h2 class="govuk-heading-m">{{ 'pages.pagePreExperianKbvTransition.content.subHeading2' | translate }}</h2>
  <p class="govuk-body">{{'pages.pagePreExperianKbvTransition.content.paragraph5' | translate }}</p>

  {{ govukWarningText({
    text: 'pages.pagePreExperianKbvTransition.warningTextContent' | translate,
    iconFallbackText: 'pages.pagePreExperianKbvTransition.warningTextFallback' | translate
  }) }}

  {{ journeyNextForm(pageId, csrfToken, 'pages.pagePreExperianKbvTransition.buttonText' | translate ) }}
{% endblock %}
